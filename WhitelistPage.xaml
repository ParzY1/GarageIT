<UserControl x:Class="Garage.WhitelistPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="RecentQueriesDataGrid" AutoGenerateColumns="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,40,10,80">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Czas" Binding="{Binding Time}" Width="*" />
                <DataGridTextColumn Header="Typ" Binding="{Binding Type}" Width="*" />
                <DataGridTextColumn Header="Domena" Binding="{Binding Domain}" Width="*" />
                <DataGridTextColumn Header="Klient" Binding="{Binding Client}" Width="*" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" />
                <DataGridTextColumn Header="Odpowiedź" Binding="{Binding Reply}" Width="*" />
                <DataGridTextColumn Header="Akcja" Binding="{Binding Action}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
