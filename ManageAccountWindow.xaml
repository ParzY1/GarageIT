<Window x:Class="Garage.ManageAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Account" Height="400" Width="500"
        Background="#282C34" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#FF5722"/>
        <SolidColorBrush x:Key="TextColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#282C34"/>
    </Window.Resources>
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="User Account" FontSize="24" Foreground="{StaticResource TextColor}" FontWeight="Bold" Margin="0 0 20 0" HorizontalAlignment="Center"/>

            <!-- Username -->
            <StackPanel Orientation="Horizontal" Margin="0 10">
                <TextBlock Text="Username: " Foreground="{StaticResource TextColor}" FontWeight="Bold" Margin="0 0 10 0"/>
                <TextBlock Text="UserName" Foreground="Gray"/>
            </StackPanel>

            <!-- Permissions -->
            <StackPanel Orientation="Horizontal" Margin="0 10">
                <TextBlock Text="Permissions: " Foreground="{StaticResource TextColor}" FontWeight="Bold" Margin="0 0 10 0"/>
                <TextBlock Text="Admin" Foreground="Gray"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
